            {{!-- <h2 class="d-flex justify-content-center">Add Prescription</h2> --}}
            <h2 class="d-flex">Add Prescription</h2>
            <div class="form-group">
               <label>Select patient:</label>
               <select class="form-control" style="width: 50%;" name="name">
                  <option>Choose patient:</option>
                  {{#each patients}}
                  <option>{{first_name}} {{last_name}}</option>
                  {{/each}}
               </select>
            </div>

            <div class="form-group">
               <label>Select Medicine:</label>
               <select class="form-control" style="width: 50%;" name="drug">
                  <option>Choose medicine:</option>
                  {{#each drugs}}
                  <option name="{{name}}">{{name}}</option>
                  {{/each}}
               </select>
            </div>

            {{!-- <div class="form-group">
