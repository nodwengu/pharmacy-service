         </form>
      </div>

      <div class="budget pizza">
         <h2 class="d-flex">Case Manifest/Prescription Order</h2>

         <table>
            <thead>
               <tr>
                  {{!-- <th>ID</th> --}}
                  <th>Patient</th>
                  <th>Medicine</th>
                  <th>Dosage/directions</th>
                  <th>Action</th>

               </tr>
            </thead>

            {{#each prescriptions}}
            <tr>
               {{!-- <td>#{{id}}</td> --}}
               <td>{{patient_id}}</td>
               <td>{{drug_id}}</td>
               <td>{{dosage}}</td>
               <td>
                  <a href="/update-prescription/{{id}}" class="btn btn-outline-light orderBtn" type="submit">Update</a>
                  <a href="/delete-prescription/{{id}}" class="btn btn-outline-light btn-danger orderBtn"
                     type="submit">Delete</a>
               </td>

            </tr>
            {{/each}}

         </table>
         <div class="d-flex">
            <button class="btn btn-outline-light orderBtn" type="submit">Create order</button>
         </div>
      </div>
   </div>


